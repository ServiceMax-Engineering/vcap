---
cloud_controller_uri: <%= node[:cloud_controller][:service_api_uri] %>
service:
  name: mongodb
  version: "<%= node[:mongodb_node][:version] %>"
  description: 'MongoDB NoSQL store'
  plans: ['free']
  tags: ['mongodb', 'mongodb-<%= node[:mongodb_node][:version] %>', 'nosql']
host: localhost
index: <%= node[:mongodb_node][:index] %>
token: <%= node[:mongodb_node][:token] %>
mbus: nats://<%= node[:nats_server][:user] %>:<%= node[:nats_server][:password] %>@<%= node[:nats_server][:host] %>:<%= node[:nats_server][:port] %>/
pid: /var/vcap/sys/run/mongodb_gateway.pid
logging:
  level: debug
# allow_over_provisioning: false
node_timeout: <%= node[:mongodb_node][:node_timeout] %>

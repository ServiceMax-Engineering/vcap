#!/bin/sh
echo "<%= node[:deployment][:etc_issue_msg] %>" > /etc/issue
ip=`/sbin/ifconfig | grep "inet addr" | grep -v "127.0.0.1" | awk '{ print $2 }' | awk -F: '{ print $2 }'`
if [ -n "$ip" ]; then
  echo "Running on $ip" >> /etc/issue
fi
if [ -n "$VCAP_STATUS" ]
  echo "$VCAP_STATUS"
fi
echo "" >> /etc/issue
sudo env TERM=xterm sh -c 'clear >/dev/console'
pkill getty

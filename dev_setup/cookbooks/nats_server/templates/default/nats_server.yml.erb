---
net: <%= node[:nats_server][:host] %>
port: <%= node[:nats_server][:port] %>
<%= "tracked_net_iface: #{node[:nats_server][:tracked_net_iface]}" unless node[:nats_server][:tracked_net_iface].nil? %>

pid_file: /var/run/nats_server.pid
log_file: /var/log/nats_server.log

authorization:
  user: <%= node[:nats_server][:user] %>
  password: <%= node[:nats_server][:password] %>
  timeout: 20

logtime: <%= node[:nats_server][:logtime] %>
debug: <%= node[:nats_server][:debug] %>
trace: <%= node[:nats_server][:trace] %>
